@model VirvisShopFinal.Models.Register

@* no quiero usar el Layout base *@

<section class="form-container">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()

        <!-- Mostrar todos los errores del formulario -->
        @* @Html.ValidationSummary(false, "", new { @class = "text-danger" }) *@

        <p id="heading">Registrarse a <a class="navbar-brand zen-dots-regular" asp-area="" asp-controller="Home" asp-action="Index">VirVis Shop</a></p>

        <div class="field">
            <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-textarea-t" viewBox="0 0 16 16">
                <path d="M1.5 2.5A1.5 1.5 0 0 1 3 1h10a1.5 1.5 0 0 1 1.5 1.5v3.563a2 2 0 0 1 0 3.874V13.5A1.5 1.5 0 0 1 13 15H3a1.5 1.5 0 0 1-1.5-1.5V9.937a2 2 0 0 1 0-3.874zm1 3.563a2 2 0 0 1 0 3.874V13.5a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V9.937a2 2 0 0 1 0-3.874V2.5A.5.5 0 0 0 13 2H3a.5.5 0 0 0-.5.5zM2 7a1 1 0 1 0 0 2 1 1 0 0 0 0-2m12 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2" />
                <path d="M11.434 4H4.566L4.5 5.994h.386c.21-1.252.612-1.446 2.173-1.495l.343-.011v6.343c0 .537-.116.665-1.049.748V12h3.294v-.421c-.938-.083-1.054-.21-1.054-.748V4.488l.348.01c1.56.05 1.963.244 2.173 1.496h.386z" />
            </svg>
            @Html.TextBoxFor(m => m.name, new { @class = "input-field", placeholder = "Nombre", @id = "firstname" })
            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
            @* <input id="firstname" placeholder="Nombre" class="input-field" type="text"> *@
        </div>
        <div class="field">
            <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-textarea-t" viewBox="0 0 16 16">
                <path d="M1.5 2.5A1.5 1.5 0 0 1 3 1h10a1.5 1.5 0 0 1 1.5 1.5v3.563a2 2 0 0 1 0 3.874V13.5A1.5 1.5 0 0 1 13 15H3a1.5 1.5 0 0 1-1.5-1.5V9.937a2 2 0 0 1 0-3.874zm1 3.563a2 2 0 0 1 0 3.874V13.5a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V9.937a2 2 0 0 1 0-3.874V2.5A.5.5 0 0 0 13 2H3a.5.5 0 0 0-.5.5zM2 7a1 1 0 1 0 0 2 1 1 0 0 0 0-2m12 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2" />
                <path d="M11.434 4H4.566L4.5 5.994h.386c.21-1.252.612-1.446 2.173-1.495l.343-.011v6.343c0 .537-.116.665-1.049.748V12h3.294v-.421c-.938-.083-1.054-.21-1.054-.748V4.488l.348.01c1.56.05 1.963.244 2.173 1.496h.386z" />
            </svg>
            @Html.TextBoxFor(m => m.lastname, new { @class = "input-field", placeholder = "Apellido", @id = "lastname" })
            @Html.ValidationMessageFor(m => m.lastname, "", new { @class = "text-danger" })
            @* <input id="lastname" placeholder="Apellido" class="input-field" type="text"> *@
        </div>
        <div class="field">
            <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z" />
            </svg>
            @Html.TextBoxFor(m => m.email, new { @class = "input-field", placeholder = "Email", autocomplete = "off", @id = "email" })
            @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
            @* <input id="email" placeholder="Email" class="input-field" type="email"> *@
        </div>
        <div class="field">
            <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
            </svg>
            @Html.PasswordFor(m => m.password, new { @class = "input-field", placeholder = "Contraseña", @id = "password" })
            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
            @* <input id="password" placeholder="Contraseña" class="input-field" type="password"> *@
        </div>
        <div class="field">
            <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
            </svg>
            @Html.PasswordFor(m => m.confirmPassword, new { @class = "input-field", placeholder = "Confirmar Contraseña", @id = "confirmPassword" })
            @Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "text-danger" })
            @* <input id="confirmPassword" placeholder="Confirmar contraseña" class="input-field" type="password"> *@
        </div>
        <button class="button1">Registrarse</button>
    }

</section>
@* <script src="~/js/validations.js"></script> *@